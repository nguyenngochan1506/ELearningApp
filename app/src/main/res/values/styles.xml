<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Định nghĩa style cha Shape.Corner -->
    <style name="Shape.Corner" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
    </style>

    <!-- Các style con -->
    <style name="Shape.Corner.12">
        <item name="cornerSize">12dp</item>
    </style>
    <style name="Shape.Corner.20">
        <item name="cornerSize">20dp</item>
    </style>

    <!-- Các style khác -->
    <style name="Text.Body" parent="TextAppearance.AppCompat.Body1"/>
    <style name="Text.BodySelf" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Text.Timestamp" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/gray_600</item>
    </style>
    <style name="Text.TimestampSelf" parent="Text.Timestamp">
        <item name="android:textColor">@color/gray_600</item> <!-- Sửa lỗi typo "namea" thành "name" -->
    </style>
    <style name="Text.DateChip" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/gray_600</item>
    </style>
</resources>