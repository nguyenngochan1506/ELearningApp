<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền màu trắng -->
    <solid android:color="@android:color/white" />

    <!-- Bo góc nhẹ -->
    <corners android:radius="12dp" />

    <!-- Đổ bóng nhẹ nếu cần -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />

    <!-- Viền xám nhạt -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />
</shape>
