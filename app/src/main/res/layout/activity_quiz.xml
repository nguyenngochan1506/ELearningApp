<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quizLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9FAFB"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/timerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="05:00"
            android:textColor="#DC2626"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Câu hỏi -->

    <TextView
        android:id="@+id/questionIndicator"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Câu 1/4"
        android:textColor="#111827"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Câu hỏi mô tả"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#111827" />

    <!-- Các tùy chọn trắc nghiệm -->
    <RadioGroup
        android:id="@+id/optionsGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp" />

    <!-- Trường trả lời tự luận -->
    <EditText
        android:id="@+id/shortAnswerInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập câu trả lời..."
        android:visibility="gone"
        android:minHeight="100dp"
        android:padding="12dp"
        android:textSize="14sp" />

    <Button
        android:id="@+id/uploadFileButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đính kèm file"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!-- Nút điều hướng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="end">

        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="← Câu trước" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Câu tiếp →" />
    </LinearLayout>

</LinearLayout>
